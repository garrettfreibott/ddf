<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- LDAP Wizard -->
    <bean id="ldapWizardContextPath" class="java.lang.String">
        <argument value="/admin/wizard/ldap"/>
    </bean>

    <bean id="ldapBindHostStage" class="org.codice.ui.admin.security.stage.sample.LdapBindHostSettingsStage"/>
    <bean id="ldapDirStage" class="org.codice.ui.admin.security.stage.sample.LdapDirectorySettingsStage"/>
    <bean id="ldapNetworkStage" class="org.codice.ui.admin.security.stage.sample.LdapNetworkSettingsStage"/>

    <service ref="ldapBindHostStage" interface="org.codice.ui.admin.security.api.StageFactory"/>
    <service ref="ldapDirStage" interface="org.codice.ui.admin.security.api.StageFactory"/>
    <service ref="ldapNetworkStage" interface="org.codice.ui.admin.security.api.StageFactory"/>

    <reference-list id="stages" interface="org.codice.ui.admin.security.api.StageFactory" availability="optional"/>

    <reference-list id="wizards" interface="org.codice.ui.admin.security.api.Wizard" availability="optional"/>

    <bean id="ldapWiz" class="org.codice.ui.admin.security.LdapWizard">
        <property name="contextPath" value="/admin/wizard"/>
        <property name="stages" ref="stages"/>
        <property name="wizards" ref="wizards"/>
    </bean>

    <service ref="ldapWiz" interface="org.codice.ui.admin.security.api.Wizard"/>

    <!-- Sources Wizard -->

    <bean id="sourcesSetupStage" class="org.codice.ui.admin.sources.stage.SourcesSetupStage"/>
    <bean id="sourcesDiscoveryStage" class="org.codice.ui.admin.sources.stage.SourcesDiscoveryStage"/>
    <bean id="sourcesAdvancedStage" class="org.codice.ui.admin.sources.stage.SourcesAdvancedStage"/>


    <service ref="sourcesSetupStage" interface="org.codice.ui.admin.security.api.StageFactory"/>
    <service ref="sourcesDiscoveryStage" interface="org.codice.ui.admin.security.api.StageFactory"/>
    <service ref="sourcesAdvancedStage" interface="org.codice.ui.admin.security.api.StageFactory"/>

    <bean id="sourcesWiz" class="org.codice.ui.admin.sources.SourcesWizard"/>

    <service ref="sourcesWiz" interface="org.codice.ui.admin.security.api.Wizard"/>

    <!-- Spark Servlet -->
    <bean id="sparkServlet" class="org.codice.ui.admin.security.SparkServlet">
        <property name="sparkApplications">
            <list>
                <ref component-id="ldapWiz"/>
            </list>
        </property>
        <property name="filterMappingPattern" value="/admin/wizard/*"/>
    </bean>

    <service ref="sparkServlet" interface="javax.servlet.Servlet">
        <service-properties>
            <entry key="urlPatterns" value="/admin/wizard/*"/>
        </service-properties>
    </service>


    <!-- Admin Module Additions -->
    <bean id="securityModule" class="org.codice.ui.admin.security.SecurityModule"/>
    <service ref="securityModule" interface="org.codice.ddf.ui.admin.api.module.AdminModule"/>
</blueprint>