{
  "name": "logviewer-ui",
  "author": "Codice",
  "description": "UI for viewing the Karaf Logs in the Admin UI",
  "version": "0.1.0",
  "license": "LGPL-3.0",
  "main": "index.js",
  "scripts": {
    "pretest": "standard ./src/**/*.js",
    "test": "browserify -d ./src/test/js/*.js | tape-run | tap-dot",
    "start": "hotloadify src/main/webapp/js/index.js --open",
    "prebuild": "mkdirp ./target/webapp",
    "build": "browserify src/main/webapp/js/index.js -p [minifyify --no-map] > ./target/webapp/bundle.js"
  },
  "keywords": [
    "log",
    "viewer"
  ],
  "dependencies": {
    "color": "^0.11.1",
    "concat-stream": "^1.5.1",
    "event-stream": "^3.3.2",
    "merge": "^1.2.0",
    "moment": "^2.11.2",
    "random-item": "^1.0.0",
    "react": "^0.14.7",
    "react-addons-css-transition-group": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-visibility-sensor": "^3.0.0",
    "reactify": "^1.1.1",
    "redux": "^3.3.1"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "hotloadify": "0.0.5",
    "minifyify": "^7.3.2",
    "mkdirp": "^0.5.1",
    "react-addons-test-utils": "^0.14.7",
    "react-stateless-wrapper": "^1.0.2",
    "standard": "^6.0.8",
    "tap-dot": "^1.0.4",
    "tape": "^4.5.1",
    "tape-run": "^2.1.3"
  },
  "browserify": {
    "transform": [
      "reactify",
      "brfs"
    ]
  }
}
